{
  "manifest_version": 2,
  "name": "soxdrawer",
  "version": "1.0.1",
  "description": "A NATS-powered object storage service extension",

  "permissions": [
    "storage",
    "notifications",
    "http://localhost/*",
    "webRequest"
  ],

  "background": {
    "scripts": ["nats-client.js", "background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "SoxDrawer - NATS Object Storage"
  }
}
