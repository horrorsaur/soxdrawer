{
  "manifest_version": 2,
  "name": "SoxDrawer",
  "version": "1.0.0",
  "description": "A NATS-powered object storage service extension",
  
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost:8080/*"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "SoxDrawer"
  },
  
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
