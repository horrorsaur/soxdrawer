{
  "manifest_version": 2,
  "name": "SoxDrawer",
  "version": "1.0.0",
  "description": "A NATS-powered object storage service extension with embedded server",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "background",
    "http://localhost:*/*",
    "ws://localhost:*/*"
  ],
  
  "background": {
    "scripts": [
      "nats-client.js",
      "background.js"
    ],
    "persistent": true
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "SoxDrawer - NATS Object Storage"
  },
  
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
